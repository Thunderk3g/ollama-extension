{
  "manifest_version": 3,
  "name": "Ollama Bridge",
  "version": "1.0.0",
  "description": "Bridge between websites and local Ollama API",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "https://portfolio-flame-five.vercel.app/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://portfolio-flame-five.vercel.app/*",
        "http://localhost:3000/*", 
        "http://127.0.0.1:3000/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bridge-interface.js"],
      "matches": [
        "https://portfolio-flame-five.vercel.app/*",
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 